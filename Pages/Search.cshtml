@page
@model VideoGame.Pages.Games.SearchModel

<h1>Search</h1>

<form method="get" action="">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search for games or users..." name="searchQuery">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>

@if (Model.GamesWithCharacters.Any())
{
    @foreach (var gameWithCharacters in Model.GamesWithCharacters)
    {
        <h2>@gameWithCharacters.Game.Title</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Level</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var character in gameWithCharacters.Characters)
                {
                    <tr>
                        <td>@character.Name</td>
                        <td>@character.Level</td>
                        <td>@character.User</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <p>No results found.</p>
}

