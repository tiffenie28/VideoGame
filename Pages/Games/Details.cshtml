@page
@model VideoGame.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-sm-12">
        <h4>Game Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Game.Title</dd>
            <dt class="col-sm-2">Genre</dt>
            <dd class="col-sm-10">@Model.Game.Genre</dd>
            <dt class="col-sm-2">Platform</dt>
            <dd class="col-sm-10">@Model.Game.Platform</dd>
        </dl>
    </div>
</div>

@if (Model.Game.Characters.Any())
{
    <div class="row">
        <div class="col-sm-12">
            <h4>Characters</h4>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Level</th>
                        <th>User</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var character in Model.Game.Characters)
                    {
                        <tr>
                            <td>@character.Name</td>
                            <td>@character.Level</td>
                            <td>@character.User</td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="CharacterId" value="@character.CharacterId" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


    <form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="Name" required>
    </div>
    <div class="form-group">
        <label for="level">Level:</label>
        <input type="number" class="form-control" id="level" name="Level" required>
    </div>
    <div class="form-group">
        <label for="user">User:</label>
        <input type="text" class="form-control" id="user" name="User" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Character</button>
    
</form>




<div class="row">
    <div class="col-sm-12">
        <a asp-page="./Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
           <a asp-page="./Index">Back to List</a>
    </div>
</div>








