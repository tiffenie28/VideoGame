@page
@model VideoGame.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-sm-12">
        <h4>Game Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Game.Title</dd>
            <dt class="col-sm-2">Genre</dt>
            <dd class="col-sm-10">@Model.Game.Genre</dd>
            <dt class="col-sm-2">Platform</dt>
            <dd class="col-sm-10">@Model.Game.Platform</dd>
        </dl>
    </div>
</div>

@if (Model.Game.Characters.Any())
{
    <div class="row">
        <div class="col-sm-12">
            <h4>Characters</h4>
            <hr />
            <div class="row">
                @foreach (var character in Model.Game.Characters)
                {
                    <div class="col-sm-4">
                        <dl class="row">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@character.Name</dd>
                            <dt class="col-sm-4">Level</dt>
                            <dd class="col-sm-8">@character.Level</dd>
                            <dt class="col-sm-4">User</dt>
                            <dd class="col-sm-8">@character.User</dd>
                        </dl>
                    </div>
                }
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <a asp-page="./Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

